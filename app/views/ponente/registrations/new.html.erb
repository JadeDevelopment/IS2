<body class="html front not-logged-in no-sidebars page-inicio page-panels" >
  <div id="page">
    <header class="header" id="header" role="banner">
      <a href="/" title="Inicio" rel="home" class="header__logo" id="logo">
        <img src="https://www.unam.mx/sites/all/themes/unam/logo.png" alt="Inicio" class="header__logo-image" />
      </a>
    </header><!--/header-->

    <div id="main">
      <div id="navigation">
        <nav class="navbar navbar-default" role="navigation">
          <div class="container-fluid">
            <div class="navbar-header">
              <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
              </button>
            </div>

            <div class="collapse navbar-collapse">
              <ul class="nav navbar-nav">
                <li><a href="/">Inicio</a></li>
                <li><a href="#">Catálogo Cursos</a></li>
                <li><a href="#">Formas de Pago</a></li>
                <li class="dropdown">
                  <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                    Ingresa <span class="caret"></span>
                  </a>
                          
                  <ul class="dropdown-menu">
                    <li><a href="/ponentes/sign_in">Ponente</a></li>
                    <li><a href="">Alumno</a></li>
                  </ul>
                </li>
                <li class="dropdown active">
                  <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                    Registrate <span class="caret"></span>
                  </a>
                  <ul class="dropdown-menu">
                    <li><%= link_to "Ponente", new_ponente_registration_path %></li>
                    <li><a href="">Alumno</a></li>
                  </ul>
                </li>
                <li><a href="#">Acerca de</a></li>
              </ul>
            </div>
          </div><!--/.container-->
        </nav><!--/nav-->
      </div>
  
  
      <div class="container" style="margin-top:40px">
        <div class="col-sm-8 col-md-6 col-sm-offset-2">
          <div class="panel panel-primary">
            <div class="panel-heading">
              <h3 class="panel-title">Registro</h3>
            </div>
            <div class="panel-body">
              <div class="row">
                <p class="notice"><%= notice %></p> <p class="alert"><%= alert %></p>
              </div>
              <div class="row">
              <div class="col-xs-12 col-sm-12 col-md-12 separator">
                <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                  <%= devise_error_messages! %>
                  <div class="form-group">
                    <div class="input-group">
                      <%= f.label :nombre_de_usuario %><br />
                    </div>
                    <div class="input-group">
                      <span class="input-group-addon"><span class="glyphicon glyphicon-user"></span></span>
                      <%= f.text_field :nombreusuario, autofocus: true, class: "form-control", :placeholder => "nombre" %>
                    </div>
                  </div>
                  <div class="form-group">
                    <%= f.label :Correo_Electronico %><br />
                    <div class="input-group">
                    </div>
                    <div class="input-group">
                      <span class="input-group-addon"><span class="glyphicon glyphicon-envelope"></span></span>
                      <%= f.email_field :email, autofocus: true, class: "form-control", :placeholder => "ejemplo@dominio.com" %>
                    </div>
                  </div>
                  <div class="row">
                    <div class="form-group">
                      <div class="input-group">
                        <% if @minimum_password_length %>
                            <em>(<%= @minimum_password_length %> characters minimum)</em>
                          <% end %>
                      </div>
                    </div>
                  </div>
                  <div class="row">
                    <div class="col-xs-12 col-sm-6 col-md-6">
                      <div class="form-group">
                        <div class="input-group">
                          Contraseña
                        </div>
                        <div class="input-group">
                          <span class="input-group-addon"><span class="glyphicon glyphicon-lock"></span></span>
                          <%= f.password_field :password, autocomplete: "off", class: "form-control", :placeholder => "Contraseña" %>
                        </div>
                      </div>
                    </div>
                    <div class="col-xs-12 col-sm-6 col-md-6">
                      <div class="form-group">
                        <div class="input-group">
                          Confirma Contraseña
                        </div>
                        <div class="input-group">
                          <span class="input-group-addon"><span class="glyphicon glyphicon-lock"></span></span>
                          <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", :placeholder => "Confirma Contaseña" %>
                        </div>
                      </div>
                    </div>
                  </div>
                  <div class="col-xs-12 col-sm-6 col-md-6">
                    <%= f.submit "Registrarme" %>
                  </div>
                  <div class="col-xs-12 col-sm-6 col-md-6">
                    <%= render "ponente/shared/links" %>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    
    </div>
  </div>
  </div>
</body>