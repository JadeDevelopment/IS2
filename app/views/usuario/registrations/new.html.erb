<body class="html front not-logged-in no-sidebars page-inicio page-panels" style="width:100%">
  <div id="page">
    <!--header-->
    <header class="header" id="header" role="banner">
      <a href="/" title="Inicio" rel="home" class="header__logo" id="logo">
        <img src="https://www.unam.mx/sites/all/themes/unam/logo.png" alt="Inicio" class="header__logo-image" />
      </a>
    </header><!--/header-->

    <div id="main">
      <!--#panel de navegación-->
      <div id="navigation">
        <!--nav-->
        <nav class="navbar navbar-default" role="navigation">
          <div class="container-fluid">
            <div class="navbar-header">
              <!--boton (margen menor a 800px)-->
              <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
              </button>
            </div><!--/boton-->

            <!--.barra de navegación que collapsa-->
            <div class="collapse navbar-collapse">
              <ul class="nav navbar-nav">
                <li><a href="/">Inicio</a></li>
                <li><a href="#">Catálogo Cursos</a></li>
                <% if current_ponente -%>
                  <li><a href="#">Acerca de</a></li>
                  <li><%= link_to "Mi Cuenta", ponente_path(current_ponente.id) %></li>
                  <li><%= link_to "Salir", destroy_ponente_session_path, :method => 'delete' %></li>
                <% else -%>
                  <li><a href="#">Formas de Pago</a></li>
                  <li><a href="#">Inscripción</a></li>
                  <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                      Ingresa <span class="caret"></span>
                    </a>
                          
                    <ul class="dropdown-menu">
                      <li><%= link_to "Ponente", new_ponente_session_path %></li>
                      <li><%= link_to "Alumno", new_usuario_session_path %></li>
                    </ul>
                  </li>
                  <li class="dropdown active">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                      Registrate <span class="caret"></span>
                    </a>
                    <ul class="dropdown-menu">
                      <li><%= link_to "Ponente", new_ponente_registration_path %></li>
                      <li class="active"><%= link_to "Alumno", new_usuario_registration_path %></li>
                    </ul>
                  </li>
                  <li><a href="#">Acerca de</a></li>
                <% end-%>
              </ul>
            </div><!--/.barra de navegación que collapsa-->
          </div><!--/.container-->
        </nav><!--/nav-->
      </div><!--/#panel de navegación-->

      <div class="container" style="margin-top:40px">
        <div class="col-sm-8 col-md-6 col-sm-offset-2">
          <div class="panel panel-primary">
            <div class="panel-heading">
              <h3 class="panel-title">Registro Alumno</h3>
            </div>
            <div class="panel-body">
              <div class="row">
                <p class="notice"><%= notice %></p>
                <p class="notice"><%= alert %><p class="notice">
              </div>
              <div class="row">
                <div class="col-xs-12 col-sm-12 col-md-12 separator">
                  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                    <div class="form-group">
                      <div class="input-group">
                        <%= f.label :Nombres %>
                      </div>
                      <div class="input-group">
                        <span class="input-group-addon"><span class="glyphicon glyphicon-user"></span></span>
                        <%= f.text_field :nombre, autofocus: true, class: "form-control", :placeholder => "Nombre(s)" %>
                      </div>
                    </div>
                    <div class="row">
                      <div class="col-xs-12 col-sm-6 col-md-6">
                        <div class="form-group">
                          <div class="input-group">
                            <%= f.label :Apellido_Paterno %>
                          </div>
                          <div class="input-group">
                            <span class="input-group-addon"><span class="glyphicon glyphicon-user"></span></span>
                            <%= f.text_field :appaterno, class: "form-control", :placeholder => "Apellido Paterno", :required => "true" %>
                          </div>
                        </div>
                      </div>
                      <div class="col-xs-12 col-sm-6 col-md-6">
                        <div class="form-group">
                          <div class="input-group">
                            <%= f.label :Apellido_Materno %>
                          </div>
                          <div class="input-group">
                            <span class="input-group-addon"><span class="glyphicon glyphicon-user"></span></span>
                            <%= f.text_field :apmaterno, class: "form-control", :placeholder => "Apellido Materno", :required => "true" %>
                          </div>
                        </div>
                      </div>
                    </div>
                    <div class="form-group">
                      <div class="input-group">
                        <%= f.label :Correo_Electronico %>
                      </div>
                      <div class="input-group">
                        <span class="input-group-addon"><span class="glyphicon glyphicon-envelope"></span></span>
                        <%= f.email_field :email, class: "form-control", :placeholder => "ejemplo@dominio.com", :required => "true" %>
                      </div>
                    </div>
                    <div class="form-group">
                      <div class="input-group">
                        <% if @minimum_password_length %>
                          <em>(<%= @minimum_password_length %> caracteres minimo)</em>
                        <% end %>
                      </div>
                    </div>
                    <div class="row">
                      <div class="col-xs-12 col-sm-6 col-md-6">
                        <div class="form-group">
                          <div class="input-group">
                            <%= f.label :Contraseña %>
                          </div>
                          <div class="input-group">
                            <span class="input-group-addon"><span class="glyphicon glyphicon-lock"></span></span>
                            <%= f.password_field :password, autocomplete: "off", class: "form-control", :placeholder => "Contraseña", :required => "true" %>
                          </div>
                        </div>
                      </div>
                      <div class="col-xs-12 col-sm-6 col-md-6">
                        <div class="form-group">
                          <div class="input-group">
                            <%= f.label :Confirma_Contraseña %>
                          </div>
                          <div class="input-group">
                            <span class="input-group-addon"><span class="glyphicon glyphicon-lock"></span></span>
                            <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", :placeholder => "Confirma Contaseña", :required => "true" %>
                          </div>
                        </div>
                      </div>
                    </div>
                    <div class="col-xs-12 col-sm-6 col-md-6">
                      <%= f.submit "Registrarme" %>
                    </div>
                    <div class="col-xs-12 col-sm-6 col-md-6">
                      <%= render "usuario/shared/links" %>
                    </div>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>