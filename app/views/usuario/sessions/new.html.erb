<body class="html front not-logged-in no-sidebars page-inicio page-panels">
  <div id="page">
    <header class="header" id="header" role="banner">
      <a href="/" title="Inicio" rel="home" class="header__logo" id="logo">
        <img src="https://www.unam.mx/sites/all/themes/unam/logo.png" alt="Inicio" class="header__logo-image" />
      </a>
    </header><!--/header-->

    <div id="main">
      <div id="navigation">
        <nav class="navbar navbar-default" role="navigation">
          <div class="container-fluid">
            <div class="navbar-header">
              <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
              </button>
            </div>

            <div class="collapse navbar-collapse">
              <ul class="nav navbar-nav">
                <li><a href="/">Inicio</a></li>
                <li><a href="#">Catálogo Cursos</a></li>
                <% if current_ponente -%>
                <li><%= link_to "Mi Cuenta", ponente_path(current_ponente.id) %></li>
                <li><%= link_to "Salir", destroy_ponente_session_path, :method => 'delete' %></li>
                <% else -%>
                <li><a href="#">Formas de Pago</a></li>
                <li><a href="#">Inspcripción</a></li>
                <li class="dropdown active">
                  <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                    Ingresa <span class="caret"></span>
                  </a>
                          
                  <ul class="dropdown-menu">
                    <li><%= link_to "Ponente", new_ponente_session_path %></li>
                    <li class="active"><%= link_to "Alumno", new_usuario_session_path %></li>
                  </ul>
                </li>
                <li class="dropdown">
                  <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                    Registrate <span class="caret"></span>
                  </a>
                  <ul class="dropdown-menu">
                    <li><%= link_to "Ponente", new_ponente_registration_path %></li>
                    <li><%= link_to "Alumno", new_usuario_registration_path %></li>
                  </ul>
                </li>
                <li><a href="#">Acerca de</a></li>
                <% end-%>
              </ul>
            </div>
          </div><!--/.container-->
        </nav><!--/nav-->
      </div>

<div class="container" style="margin-top:40px">
    <div class="row">
      <div class="col-sm-8 col-md-6 col-sm-offset-2">
        <div class="panel panel-primary">
          <div class="panel-heading">
            <strong> Inicia Sesión</strong>
          </div>
          <div class="row">
              <p class="notice"><%= notice %></p> <p class="alert"><%= alert %></p>
            </div>
          <div class="panel-body">
            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <fieldset>
                <div class="row">
                  <div class="col-sm-12 col-md-10  col-md-offset-1 ">
                    <div class="form-group">
                      <div class="input-group">
                        <%= f.label :Correo_Electronico %>
                      </div>
                      <div class="input-group">
                        <span class="input-group-addon">
                          <i class="glyphicon glyphicon-user"></i>
                        </span> 
                        <%= f.email_field :email, autofocus: true, :placeholder => "example@domain.com", class: "form-control" %> 
                      </div>
                    </div>
                    <div class="form-group">
                      <div class="input-group">
                        <%= f.label :Contraseña %>
                      </div>
                      <div class="input-group">
                        <span class="input-group-addon">
                          <i class="glyphicon glyphicon-lock"></i>
                        </span>
                        <%= f.password_field :password, autocomplete: "off", :placeholder => "Contraseña", class: "form-control" %>
                      </div>
                    </div>
                    <% if devise_mapping.rememberable? -%>
                      <div class="form-group">
                        <%= f.check_box :remember_me %>
                        <%= f.label :Recuerdame %>
                      </div>
                    <% end -%>
                    <div class="form-group">
                      <%= f.submit "Ingresar", class: "btn btn-lg btn-primary btn-block" %>
                    </div>
                  </div>
                </div>
              </fieldset>
            <% end %>
          </div>
          <div class="panel-footer ">
            <%= render "usuario/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
</div>
</body>
