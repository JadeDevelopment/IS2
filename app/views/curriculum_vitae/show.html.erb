        <div class="row2">
          <div class="col-sm-4"></div>
          
        </div>
        
        <div id="Experiencia_academica">
          <h2>Experiencia Academica</h2>
          <div class="row2">
            <div class="form-group col-md-9">
              <label for="experiencia_docente">Experiencia docente:</label>
              <%=CursoDeActualizacion.where(formacion_academica_id: @formacion_academica.id).first.año %>
              <input type="text" name="experiencia_docente" id="experiencia_docente" class="form-control-horizontal">
            </div>
          </div>


